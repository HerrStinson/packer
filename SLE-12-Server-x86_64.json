{
  "description": "SuSE Linux Enterprise 12 Minimal",
  "post-processors": [
    {
      "type": "vsphere",
      "only": ["vmware-iso"],
      "cluster": "mycluster",
      "datacenter": "mydc",
      "host": "myvcenter",
      "password": "mypassword",
      "resource_pool": "myresourcepool",
      "username": "myuser",
      "vm_name": "SLE12MNML",
      "disk_mode": "thin",
      "insecure": "true",
      "datastore": "mydatastore",
      "vm_network": "mynetwork"
    },
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "SLES12.box"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "only": [ "vmware-iso" ],
      "source": "vmware_tools/VMwareTools-9.4.0-1280544.tar.gz",
      "destination": "/tmp/vmwaretools.tgz"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/linux/suse-postinstall.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "only": [ "virtualbox-iso" ],
      "script": "scripts/linux/virtualbox.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "only": [ "vmware-iso" ],
      "script": "scripts/linux/vmware.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/linux/suse-cleanup.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp install=cd:/<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "http",
      "iso_checksum": "64b50e62b9c5b603d83fe128adb7dc6c",
      "iso_checksum_type": "md5",
      "iso_url": "iso/SLE-12-Server-DVD-x86_64-GM-DVD1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/poweroff' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp install=cd:/<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/autoinst.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "opensuse-64",
      "http_directory": "http",
      "iso_checksum": "64b50e62b9c5b603d83fe128adb7dc6c",
      "iso_checksum_type": "md5",
      "iso_url": "iso/SLE-12-Server-DVD-x86_64-GM-DVD1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/poweroff' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
