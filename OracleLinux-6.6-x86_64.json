{
  "description": "Oracle Linux 6.6 Minimal",
  "post-processors": [
    {
      "type": "vsphere",
      "only": ["vmware-iso"],
      "cluster": "mycluster",
      "datacenter": "mydc",
      "host": "myvcenter",
      "password": "mypassword",
      "resource_pool": "myresourcepool",
      "username": "myuser",
      "vm_name": "OL6.6MNML",
      "disk_mode": "thin",
      "insecure": "true",
      "datastore": "mydatastore",
      "vm_network": "mynetwork"
    },
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "OEL66.box"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/linux/proxy.sh",
      "destination": "/tmp/proxy.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/linux/base.sh",
        "scripts/linux/chef.sh",
        "scripts/linux/vagrant.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "only": ["virtualbox-iso"],
      "script": "scripts/linux/virtualbox.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "only": ["vmware-iso"],
      "script": "scripts/linux/vmware.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "script": "scripts/linux/oel-cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10140,
      "guest_os_type": "Oracle_64",
      "http_directory": "http",
      "iso_checksum": "f88bd160b450c8df582e736fc502b3b5",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL6/U6/x86_64/OracleLinux-R6-U6-Server-x86_64-dvd.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10140,
      "guest_os_type": "oraclelinux-64",
      "http_directory": "http",
      "iso_checksum": "f88bd160b450c8df582e736fc502b3b5",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL6/U6/x86_64/OracleLinux-R6-U6-Server-x86_64-dvd.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
